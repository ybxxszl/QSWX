  <view>{{wxAuthorId}}</view>
  <view>{{wxAuthorEmail}}</view>
  <view>{{wxAuthorNickName}}</view>
  <view>{{wxAuthorSex}}</view>
  <view>{{wxAuthorCountry}}</view>
  <view>{{wxAuthorProvince}}</view>
  <view>{{wxAuthorCity}}</view>
